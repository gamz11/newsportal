
<table>

<% @news.each do |news| %>
  <tr class= "<%=cycle('list_line_odd','list_line_even')%>">
    <td>
      <%=image_tag(news.image_url,class: 'list_image') %>
    </td>
    <td class= "list_category">
     <p style= "color: white"> <%= news.category %> </p>
    </td>
    <td class= "list_description">
      <dl>
        <dt><%= news.title %></dt>
        <dd><%= truncate(strip_tags(news.description),length: 80) %></dd>
      </dl>
    </td>
    <td class= "list_actions">
        <p><%= link_to 'Show', news %></p>
        <p><%= link_to 'Edit', edit_news_path(news) %></p>
        <p><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </td>
  </tr>
<% end %>
</table>

